# Blackjack

from os import system
from art import logo
import random

def deal_card():
  """Returns a random card from the deck."""
  cards = [11,2,3,4,5,6,7,8,9,10,10,10,10]
  card = random.choice(cards)
  return(card)
  
def calculate_score(cards):
  """Take a list of cards and return the score calculated from the cards"""
  if sum(cards) == 21 and len(cards) == 2:
    return 0

  if 11 in cards and sum(cards) > 21:
    cards.remove(11)
    cards.append(1)
    
  return sum(cards)

user_cards = []
computer_cards = []
is_game_over = False

for _ in range(2):
  user_cards.append(deal_card())
  computer_cards.append(deal_card())

while not is_game_over:
  

user_score = calculate_score(user_cards)
computer_score = calculate_score(computer_cards)

if user_score or computer_score == 0 or user_score > 21:
  is_game_over = True
else:
  input("Type ")

def game():
  start = input("Do you want to play a game of Blackjack? Type 'y' or 'n': ")
  
  system('clear')
  
  print(list)
  if start == 'y':
    print(logo)
  
  print(f"   Your cards: {user_cards},curent score: {user_score} ")
  print(f"   Computer's first card: {computer_cards[0]} ")
  another_card = input("Type 'y' to get another card, type 'n' to pass: ")
  if another_card == 'y':
    user_cards.append(deal_card())
  elif:
    is_game_over = True
    print("   Your cards: {},curent score: {} ")
    print("   Computer's first card: {} ")
  elif:
    print("   Your final hand: {}, final score: {}")
    print("   Computer final hand: {}, final score: {}")
  
  print(" You {} \N{slightly smiling face}")
  play_again = input("Do you want to play another game of Blackjack? Type 'n' or 'y': ")
  
  if play_again == 'n':
    system('clear')
  else:
    system('clear')
    game()
game()
